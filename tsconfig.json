{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types",
      "global.d.ts"
    ],
    "paths": {
      "@/actions/*": ["./src/redux/actions/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/project": ["./project.config.json"],
      "@/reducers/*": ["./src/redux/reducers/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/sdk/*": ["./src/sdk/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/store/*": ["./src/redux/store/*"]
    }
  },
  "include": ["./src", "./types"],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ],
  "compileOnSave": false
}
